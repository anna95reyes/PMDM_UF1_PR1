<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecundariActivity"
    android:orientation="vertical"
    android:background="@drawable/witcher_background2">

    <ImageView
        android:id="@+id/imgApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="-70dp"
        android:src="@drawable/image_witcher_3_logo"></ImageView>

    <ImageView android:id="@+id/imvAlchemy"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_alchemy"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:onClick="click_alchemy"
        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_alchemy"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="18dp"
        android:fontFamily="@font/dinpro_bold"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_alchemy"
        android:textColor="@color/white_title"
        android:textAlignment="center"
        android:textSize="16dp"
        android:fontFamily="@font/dinpro_medium"
        ></TextView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="90dp">

        <ImageView
            android:id="@+id/imvNext"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:src="@drawable/previous_activity"
            android:onClick="click_activity_main"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbPagPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:onClick="click_activity_main"></RadioButton>

            <RadioButton
                android:id="@+id/rdbPagSecundaria"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:buttonTint="@color/yellow_radio_button"
                android:gravity="bottom"></RadioButton>

        </LinearLayout>



    </GridLayout>

</LinearLayout>